{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/declarations"],
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": [
    "./*.ts", 
    "./src/**/*.ts", 
    "./tests/**/*.ts", 
    "./src/types/declarations/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
} 